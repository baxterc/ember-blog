{{#if updateCommentForm}}
  <h2>Add comment</h2>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=comment.title}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=comment.author}}
        </div>

        <div class="form-group">
          <label for="content">Comment:</label>
          {{textarea value=content id="content" placeholder=comment.content}}
        </div>

        <button {{action 'updateComment' comment}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'showUpdateCommentForm'}}>Update Comment</button>
{{/if}}
