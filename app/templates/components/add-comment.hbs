{{#if addCommentForm}}
  <h2>Add comment</h2>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="content">Comment:</label>
          {{textarea value=content id="content"}}
        </div>

        <button {{action 'addComment'}}>Add Comment</button>
      </form>
    </div>
{{else}}
  <button {{action 'showCommentForm'}}>Add Comment</button>
{{/if}}
