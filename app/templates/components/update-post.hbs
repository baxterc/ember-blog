{{#if updatePostForm}}
  <h2>New Post</h2>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=post.title}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=post.author}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{textarea value=content id="content" placeholder=post.content}}
        </div>

        <div class="form-group">
          <label for="tag">Tag</label>
          {{input value=tag id="tag" placeholder=post.tag}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" type="date" placeholder=post.date}}
        </div>

        <button {{action 'updatePost1' post}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'showPostForm'}}>Update</button>
{{/if}}
